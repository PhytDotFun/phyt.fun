{
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },

    "editor.formatOnSave": true,

    "files.watcherExclude": {
        "**/routeTree.gen.ts": true
    },

    "search.exclude": {
        "**/routeTree.gen.ts": true
    },

    "files.readonlyInclude": {
        "**/routeTree.gen.ts": true
    },

    "editor.tabSize": 4,

    "editor.defaultFormatter": "esbenp.prettier-vscode",

    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    "[nginx]": {
        "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf",
        "editor.formatOnSave": true
    },

    "material-icon-theme.folders.associations": {
        "web": "react-components",
        "hono-api": "api",
        "data-access": "log",
        "m-queue": "queue",
        "tsconfig": "typescript",
        "webhooks": "connection",
        "workers": "robot",
        "ops": "command",
        "infra": "pipe",
        "aws-staging": "aws"
    },

    // OPTIONAL - CUSTOM MATERIAL ICONS

    // Icons have to be placed inside of ~/.vscode (or ~/.cursor)/extensions/icons (this is your IDE's installation path)
    // Copies of the custom icons are saved in /.vscode/icons (this is inside the monorepo) for you to paste into ~/.vscode/extensions/icons
    // After placing icon.svgs, drop these lines into user settings

    // Feel free to make a pr with these icons to the material icon theme repo - I'm just too lazy

    // "material-icon-theme.folders.associations": {
    //     "vault": "../../../../icons/folder-vault",
    //     "golang": "../../../../icons/folder-golang",
    //     "go": "../../../../icons/folder-golang",
    //     "eslint": "../../../../icons/folder-eslint",
    //     "eslint-config": "../../../../icons/folder-eslint",
    //     "nginx": "../../../../icons/folder-nginx",
    //     "redis": "../../../../icons/folder-redis",
    //     "trpc": "../../../../icons/folder-trpc",
    //     "trpc-adapters": "../../../../icons/folder-trpc",
    //     "dokploy": "*../../../../icons/folder-dokploy",
    //     "ec2": "*../../../../icons/folder-ec2",
    //     "hetzner": "*../../../../icons/folder-hetzner",
    //     "hetzner-prod": "*../../../../icons/folder-hetzner",
    //     "packer": "*../../../../icons/folder-packer",
    //     "postgres": "*../../../../icons/folder-postgres",
    //     "pgbouncer": "*../../../../icons/folder-postgres",
    // },
    "material-icon-theme.files.associations": {
        "*.nginx.conf": "nginx"
        //     "*.mergify.yml": "../../icons/mergify"
        //     "*.pkr.hcl": "../../icons/packer",
        //     "*.pkr": "../../icons/packer",
        //     "*.ctmpl": "../../icons/consul",
    },

    "[solidity]": {
        "editor.defaultFormatter": "JuanBlanco.solidity",
        "editor.formatOnSave": true
    },

    "solidity.formatter": "forge",
    "solidity.packageDefaultDependenciesContractsDirectory": "src",
    "solidity.packageDefaultDependenciesDirectory": "dependencies",

    "[shellscript]": {
        "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
    }
}
