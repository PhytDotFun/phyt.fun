        "@phyt/core": "workspace:*",
        "@privy-io/server-auth": "^1.28.2",
        "@t3-oss/env-core": "^0.13.8",
        "@trpc/server": "^11.4.3",
        "dotenv": "^17.1.0",
        "hono": "^4.8.4",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/node": "^24.0.7",
        "eslint": "^9.30.0",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
