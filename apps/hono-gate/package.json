{
    "name": "@phyt/hono-gate",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./router": {
            "types": "./dist/router.d.ts"
        }
    },
    "scripts": {
        "build": "pnpm run validate-env && tsup",
        "build:types": "tsup src/types.ts --dts-only --out-dir dist/types",
        "check:types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules && pnpm rimraf .turbo",
        "dev": "tsx watch src/index.ts",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "start": "node dist/index.js",
        "test": "vitest run",
        "validate-env": "node -e \"require('./src/env.ts')\""
    },
    "dependencies": {
        "@hono/node-server": "catalog:",
        "@hono/trpc-server": "catalog:",
        "@hono/zod-validator": "catalog:",
        "@phyt/data-persistence": "workspace:*",
        "@phyt/trpc-adapters": "workspace:*",
        "@privy-io/server-auth": "catalog:",
        "@t3-oss/env-core": "catalog:",
        "@trpc/server": "catalog:",
        "dotenv": "catalog:",
        "hono": "catalog:",
        "superjson": "catalog:",
        "viem": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@phyt/core": "workspace:*",
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/node": "catalog:",
        "eslint": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
