{
  "name": "phyt.fun",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --ignore-unknown",
    "check-types": "turbo run check-types",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:start": "docker compose start",
    "db:stop": "docker compose stop",
    "db:clean": "docker compose down -v",
    "db:logs": "docker compose logs -f",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.30.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=18"
  }
}
