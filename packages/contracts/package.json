{
    "name": "@phyt/contracts",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "scripts": {
            "build": "forge build",
            "test": "forge test",
            "test:ci": "forge test --profile ci",
            "clean": "forge clean",
            "deps:install": "forge soldeer install",
            "deps:update": "forge soldeer update",
            "format": "forge fmt",
            "lint": "forge fmt --check",
            "deploy": "forge script Deploy --rpc-url $RPC_URL --private-key $PRIVATE_KEY",
            "deploy:verify": "forge script Deploy --rpc-url $RPC_URL --private-key $PRIVATE_KEY --verify",
            "verify": "forge verify-contract $CONTRACT_ADDRESS src/Contract.sol:Contract --etherscan-api-key $ETHERSCAN_API_KEY"
        }
    },
    "devDependencies": {
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
