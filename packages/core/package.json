{
    "name": "@phyt/core",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "check-types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules",
        "dev": "tsup --watch",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "vitest run"
    },
    "dependencies": {
        "@t3-oss/env-core": "^0.13.8",
        "pino": "^9.7.0",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/node": "^24.0.7",
        "eslint": "^9.30.0",
        "pino-pretty": "^13.0.0",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.2.4"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
}
