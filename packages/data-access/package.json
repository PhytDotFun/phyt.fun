{
    "name": "@phyt/data-access",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        "./db/client": {
            "types": "./dist/db/client.d.ts",
            "import": "./dist/db/client.js"
        },
        "./db/schema": {
            "types": "./dist/db/schema.d.ts",
            "import": "./dist/db/schema.js"
        },
        "./models/users": {
            "types": "./dist/models/users.d.ts",
            "import": "./dist/models/users.js"
        },
        "./models/posts": {
            "types": "./dist/models/posts.d.ts",
            "import": "./dist/models/posts.js"
        },
        "./models/runs": {
            "types": "./dist/models/runs.d.ts",
            "import": "./dist/models/runs.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "check:types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules && pnpm rimraf .turbo",
        "db:check": "pnpm drizzle-kit check --config=./src/db/drizzle.config.js",
        "db:clean": "tsx ./src/db/scripts/clean.ts",
        "db:generate": "pnpm drizzle-kit generate --config=./src/db/drizzle.config.js",
        "db:migrate": "pnpm drizzle-kit migrate --config=./src/db/drizzle.config.js",
        "db:push": "pnpm drizzle-kit push --config=./src/db/drizzle.config.js",
        "db:seed": "tsx ./src/db/scripts/seed.ts",
        "db:studio": "pnpm drizzle-kit studio --config=./src/db/drizzle.config.js --host 0.0.0.0 --port 4983",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "vitest run"
    },
    "dependencies": {
        "@t3-oss/env-core": "catalog:",
        "dotenv": "catalog:",
        "drizzle-orm": "catalog:",
        "drizzle-zod": "catalog:",
        "pg": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@phyt/core": "workspace:*",
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/node": "catalog:",
        "@types/pg": "catalog:",
        "drizzle-kit": "catalog:",
        "eslint": "catalog:",
        "tsup": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
