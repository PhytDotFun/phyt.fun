{
    "name": "@phyt/m-queue",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        "./queue": {
            "types": "./dist/queue.d.ts",
            "import": "./dist/queue.js"
        },
        "./jobs": {
            "types": "./dist/jobs.d.ts",
            "import": "./dist/jobs.js"
        }
    },
    "scripts": {
        "build": "rm -rf dist && bun build src/queue.ts src/jobs.ts --outdir dist --target node --format esm --minify && tsc --declaration --emitDeclarationOnly --outDir dist",
        "check:types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules && pnpm rimraf .turbo",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "vitest run"
    },
    "dependencies": {
        "@phyt/core": "workspace:*",
        "@phyt/data-access": "workspace:*",
        "bullmq": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "eslint": "catalog:",
        "ioredis": "catalog:",
        "prettier": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
