{
    "name": "@phyt/redis",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        "./client": {
            "types": "./dist/client.d.ts",
            "import": "./dist/client.js"
        },
        "./bull": {
            "types": "./dist/bull.d.ts",
            "import": "./dist/bull.js"
        },
        "./cache": {
            "types": "./dist/cache.d.ts",
            "import": "./dist/cache.js"
        }
    },
    "scripts": {
        "build": "rm -rf dist && bun build src/client.ts src/bull.ts src/cache.ts --outdir dist --target node --format esm --minify && tsc --declaration --emitDeclarationOnly --outDir dist",
        "check:types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules && pnpm rimraf .turbo",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "vitest run"
    },
    "dependencies": {
        "@t3-oss/env-core": "catalog:",
        "dotenv": "catalog:",
        "ioredis": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@phyt/core": "workspace:^",
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/node": "catalog:",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
