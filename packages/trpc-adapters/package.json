{
    "name": "@phyt/trpc-adapters",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        "./trpc": {
            "types": "./dist/trpc.d.ts",
            "import": "./dist/trpc.js"
        },
        "./di": {
            "types": "./dist/di.d.ts",
            "import": "./dist/di.js"
        },
        "./users/procedures": {
            "types": "./dist/users/procedures.d.ts",
            "import": "./dist/users/procedures.js"
        },
        "./posts/procedures": {
            "types": "./dist/posts/procedures.d.ts",
            "import": "./dist/posts/procedures.js"
        },
        "./encoder": {
            "types": "./dist/encoder.d.ts",
            "import": "./dist/encoder.js"
        }
    },
    "scripts": {
        "build": "rm -rf dist && bun build src/trpc.ts src/di.ts src/users/procedures.ts src/posts/procedures.ts src/runs/procedures.ts src/encoder.ts --outdir dist --target node --format esm --minify && tsc --declaration --emitDeclarationOnly --outDir dist",
        "check:types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules && pnpm rimraf .turbo",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint .",
        "lint:fix": "eslint --fix",
        "test": "vitest run"
    },
    "dependencies": {
        "@phyt/data-access": "workspace:*",
        "@phyt/m-queue": "workspace:*",
        "@privy-io/server-auth": "catalog:",
        "@t3-oss/env-core": "catalog:",
        "@trpc/server": "catalog:",
        "dotenv": "catalog:",
        "drizzle-orm": "catalog:",
        "hashids": "catalog:",
        "superjson": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@phyt/core": "workspace:*",
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/hashids": "catalog:",
        "eslint": "catalog:",
        "ioredis": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
