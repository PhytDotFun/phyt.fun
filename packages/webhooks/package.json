{
    "name": "@phyt/webhooks",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        "./idempotency": {
            "types": "./dist/idempotency.d.ts",
            "import": "./dist/idempotency.js"
        },
        "./privy-handler": {
            "types": "./dist/privy-handler.d.ts",
            "import": "./dist/privy-handler.js"
        },
        "./ops": {
            "types": "./dist/ops.d.ts",
            "import": "./dist/ops.js"
        }
    },
    "scripts": {
        "build": "rm -rf dist && bun build src/idempotency.ts src/privy-handler.ts src/ops.ts --outdir dist --target node --format esm --minify && tsc --declaration --emitDeclarationOnly --outDir dist",
        "check:types": "tsc --noEmit",
        "clean": "pnpm rimraf dist && pnpm rimraf node_modules && pnpm rimraf .turbo",
        "format": "prettier --write . --ignore-unknown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "vitest run"
    },
    "dependencies": {
        "@phyt/m-queue": "workspace:*",
        "@phyt/redis": "workspace:*",
        "@privy-io/server-auth": "catalog:",
        "dotenv": "catalog:",
        "svix": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@phyt/core": "workspace:*",
        "@phyt/eslint": "workspace:*",
        "@phyt/tsconfig": "workspace:*",
        "@types/node": "catalog:",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:"
    }
}
