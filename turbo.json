{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": ["**/.env.*", "**/.env"],
    "ui": "tui",
    "globalEnv": ["NODE_ENV", "VITE_PRIVY_CLIENT_ID", "VITE_PRIVY_APP_ID"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": [
                "DATABASE_URL",
                "VITE_PRIVY_CLIENT_ID",
                "VITE_PRIVY_APP_ID",
                "PRIVY_APP_ID",
                "PRIVY_SECRET_KEY",
                "PRIVY_VERIFICATION_KEY"
            ],
            "outputs": ["dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "check:types": {
            "dependsOn": ["^check:types"]
        },
        "check:compiler": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "format": {
            "cache": false
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["lint", "build"]
        }
    }
}
