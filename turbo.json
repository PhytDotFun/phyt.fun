{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": ["**/.env.*", "**/.env"],
    "ui": "tui",
    "globalEnv": ["NODE_ENV", "VITE_PRIVY_CLIENT_ID", "VITE_PRIVY_APP_ID"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": [
                "NODE_ENV",
                "CORS_ORIGIN",
                "LOG_LEVEL",
                "DATABASE_URL",
                "REDIS_URL",
                "PORT",
                "VITE_PRIVY_CLIENT_ID",
                "VITE_PRIVY_APP_ID",
                "PRIVY_APP_ID",
                "PRIVY_SECRET_KEY",
                "PRIVY_VERIFICATION_KEY",
                "PRIVY_WEBHOOK_SECRET",
                "PRIVY_WEBHOOK_ENDPOINT",
                "USERS_SALT",
                "POSTS_SALT",
                "COMMENTS_SALT",
                "REACTIONS_SALT",
                "RUNS_SALT",
                "WORKER_CONCURRENCY",
                "WORKER_RATE_LIMIT",
                "CRON_SCHEDULE"
            ],
            "outputs": ["out/**", "dist/**", "build/**", "cache/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "check:types": {
            "dependsOn": ["^check:types"]
        },
        "check:compiler": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "format": {
            "cache": false
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["lint", "build"]
        }
    }
}
